// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
  binaryTargets = ["windows"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id         Int     @id @default(autoincrement())
  name       String
  dex_number Int     @unique
  type_1     String
  type_2     String?
  image_url  String?
  caught     Boolean
}

model User {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  email      String @unique
  password   String
  is_admin   Boolean
}
